---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Exploring Plant Species at Herbivore Hub";
const pageDescription = "Discover a vibrant world of plant species, from medicinal herbs to sustainable garden favorites. Dive into botanical wonders with expert insights on Herbivore Hub.";

// Plant data
const plantSpecies = [
  {
    id: 1,
    name: "Lavender",
    type: "Medicinal",
    description: "Known for its calming properties and beautiful purple blooms.",
    benefits: ["Relaxation", "Natural fragrance", "Insect deterrent"],
    icon: "fas fa-spa"
  },
  {
    id: 2,
    name: "Echinacea",
    type: "Medicinal",
    description: "A powerful immune system booster with vivid purple flowers.",
    benefits: ["Immune support", "Anti-inflammatory", "Antioxidant rich"],
    icon: "fas fa-heartbeat"
  },
  {
    id: 3,
    name: "Basil",
    type: "Culinary",
    description: "Aromatic herb that brings depth to any dish with its fresh flavor.",
    benefits: ["Flavor enhancement", "Antioxidant rich", "Easy to grow"],
    icon: "fas fa-leaf"
  },
  {
    id: 4,
    name: "Mint",
    type: "Culinary",
    description: "Refreshing herb perfect for teas, cocktails, and savory dishes.",
    benefits: ["Digestive aid", "Natural breath freshener", "Versatile"],
    icon: "fas fa-wind"
  },
  {
    id: 5,
    name: "Rosemary",
    type: "Culinary",
    description: "Pine-scented herb that pairs beautifully with meats and potatoes.",
    benefits: ["Memory booster", "Antioxidant rich", "Aromatic"],
    icon: "fas fa-tree"
  },
  {
    id: 6,
    name: "Peppermint",
    type: "Medicinal",
    description: "Cooling herb ideal for digestive support and natural remedies.",
    benefits: ["Digestive relief", "Headache relief", "Mental clarity"],
    icon: "fas fa-snowflake"
  }
];

const whyExplore = [
  {
    title: "Medicinal Powerhouses",
    description: "From soothing lavender to immune-boosting echinacea, many species offer natural remedies.",
    icon: "fas fa-prescription-bottle"
  },
  {
    title: "Culinary Delights",
    description: "Herbs like basil and mint transform ordinary meals into gourmet experiences.",
    icon: "fas fa-utensils"
  },
  {
    title: "Sustainable Gardens",
    description: "Choose plants that thrive naturally with minimal environmental impact.",
    icon: "fas fa-seedling"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="min-h-screen bg-gradient-to-br from-[#f0f9f4] to-[#e0f2ec]">
    {/* Hero Section */}
    <section class="relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-[#5d7d67] to-[#3a5a47] opacity-90"></div>
      <div class="absolute inset-0">
        <div class="absolute top-20 left-10 w-40 h-40 bg-[#ff7b6c] rounded-full mix-blend-multiply filter blur-xl opacity-30 animate-blob"></div>
        <div class="absolute top-40 right-10 w-40 h-40 bg-[#5d7d67] rounded-full mix-blend-multiply filter blur-xl opacity-30 animate-blob animation-delay-2000"></div>
        <div class="absolute bottom-20 left-1/2 w-40 h-40 bg-[#ff7b6c] rounded-full mix-blend-multiply filter blur-xl opacity-30 animate-blob animation-delay-4000"></div>
      </div>
      
      <div class="relative container mx-auto px-4 py-24 md:py-32 flex flex-col items-center text-center z-10">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
          Exploring Plant Species
        </h1>
        <p class="text-xl md:text-2xl text-[#d0e8d9] max-w-3xl mb-10">
          Discover a vibrant world of plant species, from medicinal herbs to sustainable garden favorites
        </p>
        <div class="bg-[#ff7b6c] text-white px-8 py-4 rounded-full font-semibold text-lg shadow-lg hover:bg-[#ff5a4a] transition duration-300 transform hover:scale-105">
          Dive Into Botanical Wonders
        </div>
      </div>
    </section>

    {/* Benefits Section */}
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-[#5d7d67] mb-4">Why Explore Plant Species?</h2>
          <div class="w-24 h-1 bg-[#ff7b6c] mx-auto"></div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {whyExplore.map((item, index) => (
            <div key={index} class="bg-gradient-to-br from-[#f0f9f4] to-[#e0f2ec] p-8 rounded-2xl shadow-lg border border-[#c8e6c9] transform transition duration-300 hover:scale-105">
              <div class="text-[#ff7b6c] text-4xl mb-6">
                <i class={item.icon}></i>
              </div>
              <h3 class="text-xl font-bold text-[#5d7d67] mb-4">{item.title}</h3>
              <p class="text-gray-700">{item.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* Plant Showcase */}
    <section class="py-16 bg-gradient-to-b from-[#f0f9f4] to-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-[#5d7d67] mb-4">Our Featured Plant Species</h2>
          <p class="text-gray-600 max-w-2xl mx-auto">Explore the remarkable diversity of flora that make our planet vibrant and healthy</p>
          <div class="w-24 h-1 bg-[#ff7b6c] mx-auto mt-4"></div>
        </div>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {plantSpecies.map((plant) => (
            <div key={plant.id} class="bg-white rounded-2xl overflow-hidden shadow-xl transform transition duration-500 hover:scale-105">
              <div class="p-6">
                <div class="flex justify-between items-start mb-4">
                  <div class="flex items-center">
                    <div class="text-[#ff7b6c] text-2xl mr-3">
                      <i class={plant.icon}></i>
                    </div>
                    <div>
                      <h3 class="text-xl font-bold text-[#5d7d67]">{plant.name}</h3>
                      <span class="inline-block bg-[#5d7d67] text-white text-xs px-2 py-1 rounded-full mt-1">
                        {plant.type}
                      </span>
                    </div>
                  </div>
                </div>
                
                <p class="text-gray-700 mb-6">{plant.description}</p>
                
                <div class="mb-6">
                  <h4 class="font-semibold text-[#5d7d67] mb-2">Key Benefits:</h4>
                  <ul class="grid grid-cols-2 gap-2">
                    {plant.benefits.map((benefit, idx) => (
                      <li key={idx} class="flex items-center text-sm">
                        <i class="fas fa-check-circle text-[#5d7d67] mr-2"></i>
                        <span class="text-gray-600">{benefit}</span>
                      </li>
                    ))}
                  </ul>
                </div>
                
                <div class="flex justify-between items-center pt-4 border-t border-[#e0f2ec]">
                  <span class="text-sm text-gray-500">Plant #{plant.id}</span>
                  <button class="bg-[#5d7d67] hover:bg-[#4a6655] text-white px-4 py-2 rounded-full text-sm transition duration-300">
                    Learn More
                  </button>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* Call to Action */}
    <section class="py-20 bg-gradient-to-r from-[#5d7d67] to-[#3a5a47]">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to Grow Your Plant Knowledge?</h2>
        <p class="text-xl text-[#d0e8d9] max-w-2xl mx-auto mb-10">
          Join our community of botanical enthusiasts and discover how plants can transform your garden and wellbeing
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="bg-[#ff7b6c] hover:bg-[#ff5a4a] text-white font-bold py-4 px-8 rounded-full text-lg transition duration-300 transform hover:scale-105">
            Start Exploring
          </button>
          <button class="bg-transparent border-2 border-white text-white hover:bg-white hover:text-[#5d7d67] font-bold py-4 px-8 rounded-full text-lg transition duration-300">
            Join Our Newsletter
          </button>
        </div>
      </div>
    </section>

    {/* Footer */}
    <footer class="bg-[#3a5a47] text-white py-12">
      <div class="container mx-auto px-4 text-center">
        <h3 class="text-2xl font-bold mb-4">Your Gateway to Botanical Wonders</h3>
        <p class="max-w-2xl mx-auto mb-6 text-[#d0e8d9]">
          Medicinal herbs, sustainable gardening, and captivating plant discoveries await you at Herbivore Hub
        </p>
        <div class="flex justify-center space-x-6 mb-8">
          <a href="#" class="text-[#ff7b6c] hover:text-white transition"><i class="fab fa-facebook-f"></i></a>
          <a href="#" class="text-[#ff7b6c] hover:text-white transition"><i class="fab fa-instagram"></i></a>
          <a href="#" class="text-[#ff7b6c] hover:text-white transition"><i class="fab fa-pinterest"></i></a>
          <a href="#" class="text-[#ff7b6c] hover:text-white transition"><i class="fab fa-twitter"></i></a>
        </div>
        <p class="text-[#d0e8d9] text-sm">Â© {new Date().getFullYear()} Herbivore Hub. All rights reserved.</p>
      </div>
    </footer>
  </div>

  <style>
    {`
      @keyframes blob {
        0% {
          transform: translate(0px, 0px) scale(1);
        }
        33% {
          transform: translate(30px, -50px) scale(1.1);
        }
        66% {
          transform: translate(-20px, 20px) scale(0.9);
        }
        100% {
          transform: translate(0px, 0px) scale(1);
        }
      }
      
      .animate-blob {
        animation: blob 20s infinite linear;
      }
      
      .animation-delay-2000 {
        animation-delay: 2s;
      }
      
      .animation-delay-4000 {
        animation-delay: 4s;
      }
      
      .prose {
        color: #5d7d67;
      }
      
      .prose h2 {
        color: #5d7d67;
        font-family: 'Georgia', serif;
      }
      
      .prose p {
        font-family: 'Georgia', serif;
      }
    `}
  </style>
</Layout>